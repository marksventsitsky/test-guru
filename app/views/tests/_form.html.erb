<%= form_with model: @test, local: true do |form| %>
<%= render 'shared/errors', resource: @test %>
  <p>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </p><br>
  <p>
    <%= form.label :level %>
    <%= form.number_field :level %>
  </p>
  <p>
    <%= form.label :user_id %>
    <%= form.collection_select :user_id, User.all, :id, :name, promt: true  %>
  </p>

  <p>
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :title, promt: true %>
  </p>

  <p><%= form.submit %></p>
<% end %>